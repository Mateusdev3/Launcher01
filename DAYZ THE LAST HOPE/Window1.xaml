<Window x:Class="DAYZ_THE_LAST_HOPE.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Digite seu nome" Height="150" Width="300" 
        WindowStyle="None" AllowsTransparency="True" Background="Black"
        BorderBrush="White" BorderThickness="1">

    <Grid MouseDown="Mouse" Background="Transparent">


        <StackPanel Margin="10">
            <TextBlock Text="Digite seu nick:" Margin="0,0,0,5" Foreground="White" FontSize="20" FontStyle="Oblique" HorizontalAlignment="Center"/>
            <TextBox x:Name="txtNome" Height="25" Width="200" Foreground="White" Background="Black"/>
            <Button Content="Confirmar" Margin="0,10,0,0" Click="Confirmar" Height="30" Width="100" Background="Black" Foreground="White" FontStyle="Oblique"
         FontSize="15"/>
        </StackPanel>
    </Grid>
</Window>
