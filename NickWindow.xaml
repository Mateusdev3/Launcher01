<Window x:Class="DAYZ_THE_LAST_HOPE.NickWindow 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Digite seu nome" Height="150" Width="300">
<StackPanel Margin="10">
    <TextBlock Text="Digite seu nome:" Margin="0,0,0,5"/>
    <TextBox x:Name="txtNome" Height="25"/>
    <Button Content="Confirmar" Margin="0,10,0,0" Click="Confirmar_Click"/>
</StackPanel>
</Window>